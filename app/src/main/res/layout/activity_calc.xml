<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.Calc">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_fab_calc"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="310dp"
        android:layout_marginRight="310dp"
        android:clickable="true"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foreground="@drawable/ic_arrow_back_black_24dp"
        android:foregroundGravity="center"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnequal"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:clickable="true"
        android:foreground="@drawable/equals_btn"
        android:foregroundGravity="clip_horizontal|center"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20B9A7"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center"
            android:text="Calculator"
            android:textAllCaps="false"
            android:textColor="#252525"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtin"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="bottom|right"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/txtresult"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:gravity="bottom|right"
            android:textSize="30sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="37dp" />
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3C3B3B"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnclr"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="clr"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btndel"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="del"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btnperc"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="%"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btndiv"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="/"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                    <Button
                        android:id="@+id/btn7"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="7"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btn8"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="8"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btn9"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="9"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btnmulti"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="*"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn4"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="4"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btn5"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="5"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btn6"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="6"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btnsub"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="-"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn1"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="1"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btn2"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="2"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btn3"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="3"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btnplus"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="+"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent" />
                    <Button
                        android:id="@+id/btn0"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Button
                        android:id="@+id/btndec"
                        style="@android:style/Widget.DeviceDefault.Button"
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:layout_margin="2dp"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:text="."
                        android:textColor="#51CAA4"
                        android:textSize="30sp" />
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>